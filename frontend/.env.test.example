TEST_STUDENT_PASSWORD=testpassword123
TEST_LECTURER_EMAIL=test.lecturer@example.com
TEST_LECTURER_PASSWORD=testpassword123

# CI/CD flags
CI=false
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=false
